<!-- views/pages/login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    .login-container {
      max-width: 400px;
      margin: 100px auto;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white text-center">
        <h4 class="mb-0"><i class="fas fa-sign-in-alt me-2"></i>Login</h4>
      </div>
      <div class="card-body">
        <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
        <% } %>
        <form action="/login" method="POST" id="loginForm">
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
          </div>
          <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- 자동로그인 스크립트 추가 -->
  <script>
    // 페이지 로드 시 실행되는 함수
    document.addEventListener('DOMContentLoaded', function() {
      // 테스트용 이메일과 비밀번호 설정
      const testEmail = "cms@test.com"; // 테스트용 이메일
      const testPassword = "1"; // 테스트용 비밀번호

      // 이메일과 비밀번호 입력 필드에 값을 채움
      document.getElementById('email').value = testEmail;
      document.getElementById('password').value = testPassword;

      // 자동으로 폼 제출 (테스트용으로 로그인 시도)
      document.getElementById('loginForm').submit();

      // 주의: 이 코드는 테스트용으로만 사용해야 하며, 실제 배포 시 제거해야 합니다.
      // 실제 환경에서는 사용자가 직접 입력하도록 해야 보안 위험이 없습니다.
    });
  </script>
</body>
</html>